---
import { GET } from '../../pages/api/news';
import { New, type INews } from '../../components/news/new';

let news: INews[] = [];

let response = await GET();
news = await response.json();
---

<div
  class='grid grid-cols-3 grid-rows-2 auto-rows-[192px] gap-4 max-w-[1024px]'
>
  {
    news.length > 0 ? (
      news.map((f1_new, index) => (
        <New f1_new={f1_new} index={index} client:visible />
      ))
    ) : (
      <div class='col-span-3 row-span-2 flex items-center justify-center'>
        <p class='text-2xl font-bold text-gray-500'>No news to show</p>
      </div>
    )
  }
</div>
